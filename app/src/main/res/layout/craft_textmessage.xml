<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/D"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_enter_password"
            android:text="This page will craft text messages...Not Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"/>

    </LinearLayout>

 <!--   <AutoCompleteTextView
        android:id="@+id/searchContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal" /> -->

    <AutoCompleteTextView
        android:id="@+id/searchContacts"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:text="Search my contacts" />

    <EditText
        android:id="@+id/craftTextMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="craftAndSendTextMessage"
        android:text="Write your text message here..." />

    <Button
        android:id="@+id/sendMyText_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SendText"
        android:text="SendText" />

</LinearLayout>